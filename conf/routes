# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# GitHub API
GET     /api/user/:username     controllers.ApplicationController.getGitHubUser(username)


# Data Repo Crud Endpoints
POST    /api/create                        controllers.ApplicationController.create()
GET     /api/read/:username                controllers.ApplicationController.read(username: String)
PUT     /api/update/:username              controllers.ApplicationController.update(username: String)
DELETE  /api/delete/:username              controllers.ApplicationController.delete(username: String)